<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbg"
    tools:context=".MainActivity">

<RelativeLayout
    android:id="@+id/insertdata"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginVertical="650dp"
    android:layout_marginLeft="300dp"
    android:background="@drawable/custombtn">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rmbg"/>

</RelativeLayout>


    <EditText
        android:id="@+id/SearchM"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="170dp"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@drawable/edit"
        android:hint="Search Medicines"/>
    <RelativeLayout
        android:id="@+id/searchbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="355dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/search"/>



    <Button
        android:id="@+id/Logoutbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginVertical="780dp"
        android:layout_marginLeft="130dp"
        android:background="#FF5722"
        android:textStyle="bold"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#F3EFEF" />
    <TextView
        android:id="@+id/GreetText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:gravity="right"/>

    <Button
        android:id="@+id/BuyMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="235dp"
        android:text="Buy Medicines"
        android:textStyle="italic"
        android:background="@drawable/edit"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_width="392dp"
            android:layout_height="300dp"
            android:layout_marginVertical="290dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="45dp"
            android:paddingStart="34dp"
            android:layout_marginRight="45dp"
            tools:listitem="@layout/layout_list" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/Name"
            android:layout_width="241dp"
            android:layout_height="99dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:paddingLeft="50dp"
            android:textColor="#F44336"
            android:textSize="40dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>

