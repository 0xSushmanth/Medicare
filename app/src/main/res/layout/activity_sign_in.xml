            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

